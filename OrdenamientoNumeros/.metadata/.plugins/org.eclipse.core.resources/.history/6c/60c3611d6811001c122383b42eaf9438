    public void selectFile (){
        int seleccion = FCopenFile.showOpenDialog(this);        //Lanzamos la ventana de tipo FileChooser
        if(seleccion==JFileChooser.APPROVE_OPTION){         //Validamos que sea correcto el archivo ingresado mediante el IF
            txtOrigen.setText(FCopenFile.getSelectedFile().getAbsolutePath());      //Asignamos la ruta absoluta en la variable txtOrigen
        }
    }
    
    public void saveFile(){
        int seleccion = FCsaveFile.showSaveDialog(this);        //Lanzamos la ventana de tipo FileChooser
        if(seleccion==JFileChooser.APPROVE_OPTION){         //Validamos que sea correcto el archivo ingresado mediante el IF
            txtDestino.setText(FCsaveFile.getSelectedFile().getAbsolutePath());      //Asignamos la ruta absoluta en la variable txtOrigen
        }
    }

